<UserControl x:Class="MineLauncher.Screens.AccountScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:launcher="clr-namespace:MineLauncher"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             xmlns:widgets="clr-namespace:MineLauncher.Widgets"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             DataContext="{Binding Source={x:Static launcher:App.Instance}, Path=Account}">
    <Grid>
        <!-- Content when account is null -->
        <Grid 
            Visibility="{Binding Source={x:Static launcher:App.Instance}, Converter={StaticResource NullToVisibilityConverter}}">
            <materialIcons:MaterialIcon Kind="Autorenew" Animation="Spin" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <!-- Content when account exists -->
        <Grid Visibility="{Binding Source={x:Static launcher:App.Instance}, Path=Account, Converter={StaticResource NotNullToVisibilityConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <widgets:SkinView Grid.Column="0" Margin="4"
                              PlayerSlim="{Binding SlimModel}"
                              PlayerSkin="{Binding PlayerSkin}"
                              CapeSkin="{Binding CapeSkin}"/>
            
            <StackPanel Grid.Column="1" Margin="4" Grid.IsSharedSizeScope="True">
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="(DEBUG) Player name"/>
                    <TextBox Grid.Column="1" Margin="0, 0, 2, 0"
                             Text="{Binding Username, Mode=TwoWay}"/>
                </Grid>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="(DEBUG) Auth token"/>
                    <TextBox Grid.Column="1" Margin="0, 0, 2, 0"
                             Text="{Binding Token, Mode=TwoWay}"/>
                </Grid>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="Slim model"/>
                    <CheckBox Grid.Column="1" Margin="0, 0, 2, 0"
                             IsChecked="{Binding SlimModel, Mode=TwoWay}"/>
                </Grid>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="Player skin"/>
                    <Button Grid.Column="1" Content="..." Margin="0, 0, 2, 0" Padding="10, 0"
                            Command="{Binding BrowsePlayerSkinCommand}"/>
                </Grid>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="Cape skin"/>
                    <Button Grid.Column="1" Content="..." Margin="0, 0, 2, 0" Padding="10, 0"
                            Command="{Binding BrowseCapeSkinCommand}"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
