<UserControl x:Class="MineLauncher.Screens.AccountScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:launcher="clr-namespace:MineLauncher"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <!-- Content when account is null -->
        <Grid 
            Visibility="{Binding Source={x:Static launcher:App.Instance}, Path=Account, Converter={StaticResource NullToVisibilityConverter}}">
            <materialIcons:MaterialIcon Kind="Autorenew" Animation="Spin" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <!-- Content when account exists -->
        <StackPanel 
            Visibility="{Binding Source={x:Static launcher:App.Instance}, Path=Account, Converter={StaticResource NotNullToVisibilityConverter}}"
                    Grid.IsSharedSizeScope="True" Margin="2">
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="(DEBUG) Player name"/>
                <TextBox Grid.Column="1" 
                           Text="{Binding Source={x:Static launcher:App.Instance}, Path=Account.Username, Mode=TwoWay}"
                           Margin="0, 0, 2, 0"/>
            </Grid>
            <Grid Margin="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="SG"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Margin="0, 0, 4, 0" Text="(DEBUG) Auth token"/>
                <TextBox Grid.Column="1" 
                         Text="{Binding Source={x:Static launcher:App.Instance}, Path=Account.Token, Mode=TwoWay}"
                         Margin="0, 0, 2, 0"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
