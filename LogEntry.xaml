<UserControl x:Class="MineLauncher.LogEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MineLauncher"
             xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <materialIcons:MaterialIcon VerticalAlignment="Center" Margin="4, 0"
                                    Kind="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LogEntry}}, Path=IconKind}"
                                    Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LogEntry}}, Path=IconBrush}"/>
        <TextBlock VerticalAlignment="Center" Margin="4, 0"
                   Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:LogEntry}}, Path=LogLine}"/>
    </StackPanel>
</UserControl>
